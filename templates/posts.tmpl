{{define "posts"}}
    <div class="mid-col-container">
        <div class="inner">
            {{range .}}
            <article class="post post-list">
                <div class="meta">
                    <div class="date"><time>May 27, 2016</time></div>
                </div>
                <h1 class="title">
                    <a href="/post/{{.ID}}">{{.Title}}</a>
                </h1>
                <div class="entry-content">
                    <p>{{.Desc}}[...]</p>
                    <p><a href="/post/{{.ID}}" class="more-link">继续阅读 »</a></p>
                </div>
            </article>

            {{end}}
        </div>
    </div>
{{end}}
