{{define "post"}}
    <div class="mid-col-container">
        <div id="content" class="inner">
            <article class="post post-241" itemscope="" itemtype="http://schema.org/Article">
                <div class="meta">
                    <div class="date"><time>May 27, 2016</time></div>
                </div>
                <h1 class="title" itemprop="headline">{{.Title}}</h1>
                <div class="entry-content" itemprop="articleBody">
                    {{.HTML}}
                <p class="post-info">发表于&nbsp;<span class="date">{{.PostDate}}</span></p>
            </article>
            <nav class="page-navi">
                <a href="#" class="prev">« 前一篇</a>
                <a href="#" class="next">后一篇 »</a>
            </nav>
        </div>
    </div>
{{end}}
